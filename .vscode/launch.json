{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gomc",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/gomc",  // 指向 src/build/gomc
            "args": ["param.lua"],  // 传入参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",  // 工作目录设置为 src
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
